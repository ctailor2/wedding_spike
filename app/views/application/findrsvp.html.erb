<% unless @group.nil? %>
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h5 class="modal-title"><%= @group.name %></h5>
	</div>
	<div class="modal-body text-center">
			<div class="well">
		<form action="/new/member" method="post" class="form form-inline" id="add-members-form">
			<div class="form-group">
				<input type="text" name="first_name" class="form-control" placeholder="First Name">
				<input type="text" name="last_name" class="form-control" placeholder="Last Name">
				<button type="submit" class="btn btn-default">
					<span class="glyphicon glyphicon-plus"></span>
				</button>
			</div>
		</form>
	</div>
		<div class="well">
			<ul id="group-member-list" class="list-group">
				<% @group.members.each do |member| %>
					<li class="list-group-item"><%= member.first_name %> <%= member.last_name %></li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="modal-footer">
	</div>
<% else %>
	<div class="modal-body">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h5 class="modal-title">Group Not Found - Please Try Again</h5>
	</div>
<% end %>
