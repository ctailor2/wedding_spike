<div class="row height-66-px rsvp-bar bkgd-opaque-teal">
	<%= form_tag('/groups/find', controller: 'groups', id: "rsvp-form") do %>
		<div class="form-group">
			<div class="col-lg-4 col-md-4 col-sm-3 col-xs-2"></div>
			<div id="rsvptextbox" class="col-lg-4 col-md-4 col-sm-6 col-xs-8">
				<div class="input-group">
					<input type="text" name="code" class="form-control" placeholder="Enter RSVP Code">
					<span class="input-group-btn">
						<button type="submit" class="btn btn-default">
							<span class="glyphicon glyphicon-play"></span>
						</button>
					</span>
				</div>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-3 col-xs-2"></div>
		</div>
	<% end %>
</div>
<div id="myModal" data-width="700px" class="modal fade" tabindex="-1" style="display: none;"></div>
